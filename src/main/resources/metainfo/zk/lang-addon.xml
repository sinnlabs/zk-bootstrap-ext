<?xml version="1.0" encoding="UTF-8"?>
<language-addon>

	<addon-name>zk-bootstrap-ext</addon-name>
	<language-name>xul/html</language-name>
	<depends>zkbind,zkex,zkmax</depends>
	
	<version>
		<version-class>org.sinnlabs.ui.zk.bootstrap.Version</version-class>
		<version-uid>0.1.2-SNAPSHOT</version-uid>
		<zk-version>7.0.0</zk-version><!-- or later -->
	</version>
	
	<javascript src="~./js/bootstrap/button.js"/>
	<javascript src="~./js/bootstrap/menupopup.js"/>
	<javascript src="~./js/bootstrap/paging.js"/>
	<javascript src="~./js/bootstrap/panel.js"/>
	<javascript src="~./js/bootstrap/window.js"/>
	<javascript src="~./js/bootstrap/datebox.js"/>
	<javascript src="~./js/bootstrap/tabbox.js"/>
	
	<javascript package="bootstrap"/>
	
	<javascript src="/webjars/bootstrap/5.1.0/js/bootstrap.bundle.min.js"/>
	
	<stylesheet href="/webjars/bootstrap/5.1.0/css/bootstrap.min.css" type="text/css"/>
	<stylesheet href="/webjars/bootstrap-icons/1.5.0/font/bootstrap-icons.css" type="text/css"/>
	<stylesheet href="~./js/bootstrap/css/zk-bootstrap.css" type="text/css"/>
	
	<component>
		<component-name>alert</component-name>
		<extends>div</extends>
		<component-class>org.sinnlabs.ui.zk.bootstrap.Alert</component-class>
	</component>
	
	<component>
		<component-name>button</component-name>
		<extends>button</extends>
		<mold>
			<mold-name>bootstrap</mold-name>
		</mold>
	</component>
	
	<component>
		<component-name>window</component-name>
		<extends>window</extends>
		<mold>
			<mold-name>bootstrap</mold-name>
		</mold>
	</component>
	
	<component>
		<component-name>panel</component-name>
		<extends>panel</extends>
		<mold>
			<mold-name>bootstrap</mold-name>
		</mold>
	</component>
	
	<component>
		<component-name>menupopup</component-name>
		<extends>menupopup</extends>
		<mold>
			<mold-name>bootstrap</mold-name>
		</mold>
	</component>
	
	<component>
		<component-name>paging</component-name>
		<extends>paging</extends>
		<mold>
			<mold-name>bootstrap</mold-name>
		</mold>
	</component>
	
	<component>
		<component-name>bslabel</component-name>
		<component-class>org.sinnlabs.ui.zk.bootstrap.Bslabel</component-class>
		<widget-class>bootstrap.Bslabel</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>labelmold.js</mold-uri>
			<css-uri>css/bslabel.css</css-uri>
		</mold>
	</component>
	
	<component>
		<component-name>datebox</component-name>
		<extends>datebox</extends>
		<mold>
			<mold-name>bootstrap</mold-name>
		</mold>
	</component>
	
	<component>
		<component-name>tabbox</component-name>
		<extends>tabbox</extends>
		<mold>
			<mold-name>bootstrap</mold-name>
		</mold>
	</component>
	
	<component>
		<component-name>searchmenu</component-name>
		<component-class>org.sinnlabs.ui.zk.bootstrap.Searchmenu</component-class>
		<widget-class>bootstrap.Searchmenu</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/searchmenu.js</mold-uri>
			<css-uri>css/searchmenu.css</css-uri>
		</mold>
		<mold>
			<mold-name>bootstrap</mold-name>
			<mold-uri>mold/searchmenu.js</mold-uri>
			<css-uri>css/searchmenu.css</css-uri>
		</mold>
	</component>
	
</language-addon>